{
  "$schema": "MCP server definitions for setup.sh",
  "description": "MCP servers to install. Fields: name (required), command (stdio), url (sse), transport (stdio|sse), scope (user|project, default: user), env (object), description (string)",
  "servers": [
    {
      "name": "memory",
      "command": "npx -y @modelcontextprotocol/server-memory",
      "description": "Persistent knowledge graph memory across sessions",
      "env": {
        "MEMORY_FILE_PATH": "{{CLAUDE_HOME}}/memory.jsonl"
      }
    },
    {
      "name": "context7",
      "command": "npx -y @upstash/context7-mcp",
      "description": "Context7 for up-to-date library documentation"
    },
    {
      "name": "puppeteer",
      "command": "npx -y @modelcontextprotocol/server-puppeteer",
      "description": "Browser automation and screenshots",
      "env": {
        "PUPPETEER_LAUNCH_OPTIONS": "{\"headless\":true,\"args\":[\"--no-sandbox\",\"--disable-setuid-sandbox\",\"--disable-dev-shm-usage\",\"--disable-gpu\"],\"defaultViewport\":{\"width\":1920,\"height\":1080}}",
        "ALLOW_DANGEROUS": "true"
      }
    },
    {
      "name": "sequential-thinking",
      "command": "npx -y @modelcontextprotocol/server-sequential-thinking",
      "description": "Step-by-step problem solving"
    },
    {
      "name": "bnx-cloudflare",
      "transport": "sse",
      "url": "http://10.0.0.2:8000/bnx-cloudflare/sse",
      "description": "Cloudflare DNS and Zero Trust (BNX account)"
    },
    {
      "name": "bnx-googleworkspace",
      "transport": "sse",
      "url": "http://10.0.0.2:8000/bnx-googleworkspace/sse",
      "description": "Google Workspace (Gmail, Calendar, Drive) for simon@boroughnexus.com"
    },
    {
      "name": "tkn-cloudflare",
      "command": "npx -y mcp-remote http://10.0.0.2:8200/sse --allow-http",
      "description": "DNS and zone management (direct port, via mcp-remote)"
    },
    {
      "name": "tkn-unraid",
      "transport": "sse",
      "url": "http://10.0.0.2:8000/tkn-unraid/sse",
      "description": "Unraid server management"
    },
    {
      "name": "tkn-aipeerreview",
      "command": "npx -y mcp-remote http://mcp-peer:8202/sse --allow-http",
      "description": "AI Peer Review - multi-model code review via LiteLLM (Tailscale)"
    },
    {
      "name": "tkn-unifi",
