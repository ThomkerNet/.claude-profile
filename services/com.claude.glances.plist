<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.claude.glances</string>

    <key>Comment</key>
    <string>Collects CPU/MEM stats for Claude Code statusline (15-min averages)</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>{{CLAUDE_HOME}}/services/glances-collector.sh</string>
    </array>

    <key>EnvironmentVariables</key>
    <dict>
        <key>CLAUDE_HOME</key>
        <string>{{CLAUDE_HOME}}</string>
        <key>HOME</key>
        <string>{{HOME}}</string>
        <key>PATH</key>
        <string>/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin:{{HOME}}/.local/bin</string>
    </dict>

    <key>StartInterval</key>
    <integer>60</integer>

    <key>RunAtLoad</key>
    <true/>

    <key>StandardOutPath</key>
    <string>{{CLAUDE_HOME}}/logs/glances.log</string>

    <key>StandardErrorPath</key>
    <string>{{CLAUDE_HOME}}/logs/glances.error.log</string>

    <key>ProcessType</key>
    <string>Background</string>

    <key>LowPriorityIO</key>
    <true/>

    <key>Nice</key>
    <integer>10</integer>
</dict>
</plist>
