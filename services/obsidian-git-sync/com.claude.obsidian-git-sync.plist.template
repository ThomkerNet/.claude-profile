<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.claude.obsidian-git-sync</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>{{CLAUDE_HOME}}/services/obsidian-git-sync/sync.sh</string>
    </array>

    <key>EnvironmentVariables</key>
    <dict>
        <key>OBSIDIAN_VAULT_PATH</key>
        <string>{{OBSIDIAN_VAULT_PATH}}</string>
        <key>OBSIDIAN_SYNC_LOG</key>
        <string>{{CLAUDE_HOME}}/logs/obsidian-sync.log</string>
        <key>HOME</key>
        <string>{{HOME}}</string>
        <key>PATH</key>
        <string>/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin</string>
    </dict>

    <key>StartInterval</key>
    <integer>60</integer>

    <key>RunAtLoad</key>
    <true/>

    <key>StandardOutPath</key>
    <string>{{CLAUDE_HOME}}/logs/obsidian-sync-stdout.log</string>

    <key>StandardErrorPath</key>
    <string>{{CLAUDE_HOME}}/logs/obsidian-sync-stderr.log</string>
</dict>
</plist>
