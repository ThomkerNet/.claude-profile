{
  "alwaysThinkingEnabled": true,
  "statusLine": {
    "type": "command",
    "command": "{{STATUSLINE_PATH}}"
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "{{BUN_PATH}} run {{CLAUDE_HOME}}/hooks/telegram-bun/stop-check.ts"
          },
          {
            "type": "command",
            "command": "{{BUN_PATH}} run {{CLAUDE_HOME}}/hooks/telegram-bun/notify.ts"
          },
          {
            "type": "command",
            "command": "{{BUN_PATH}} run {{CLAUDE_HOME}}/hooks/spec-poller/index.ts"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "{{BUN_PATH}} run {{CLAUDE_HOME}}/hooks/telegram-bun/check.ts"
          },
          {
            "type": "command",
            "command": "{{BUN_PATH}} run {{CLAUDE_HOME}}/hooks/spec-checker/index.ts"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "{{BUN_PATH}} run {{CLAUDE_HOME}}/hooks/telegram-bun/poll.ts"
          }
        ]
      }
    ]
  }
}
